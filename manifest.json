{
  "manifest_version": 3,
  "name": "Job Application Manager",
  "version": "1.0",
  "description": "Manage your job applications",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://lancersagent.com/*", "https://haken.en-japan.com/*", "https://crowdtech.jp/*"],
      "js": ["content.js"]
    }
  ]
}
